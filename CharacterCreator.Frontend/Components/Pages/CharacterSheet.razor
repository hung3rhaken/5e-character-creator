@page "/character"
@using CharacterCreator.ClassLibrary
@using CharacterCreator.ClassLibrary.Main
@using CharacterCreator.ClassLibrary.Main.CharacterClasses

<h1>Character Sheet</h1>

@if (character == null)
{
    <p>Loading...</p>
}
else
{
    <div class="character-details">
        <p><strong>Name:</strong> @character.Name</p>
        <p><strong>Class:</strong> @character.CharacterClass?.Name</p>
        <p><strong>Species:</strong> @character.Species</p>
        <p><strong>Level:</strong> @character.Level</p>

        <h3>Main Attributes</h3>
        <ul>
            <li><strong>Strength:</strong> @character.Strength</li>
            <li><strong>Dexterity:</strong> @character.Dexterity</li>
            <li><strong>Constitution:</strong> @character.Constitution</li>
            <li><strong>Intelligence:</strong> @character.Intelligence</li>
            <li><strong>Wisdom:</strong> @character.Wisdom</li>
            <li><strong>Charisma:</strong> @character.Charisma</li>
        </ul>
    </div>
}

@code {
    private Character character;

    protected override void OnInitialized()
    {
        // Create a dummy character with hardcoded values
        character = new Character();
    }
}