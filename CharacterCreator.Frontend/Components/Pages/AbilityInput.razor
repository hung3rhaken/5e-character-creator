@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms

<div class="ability">
    <label class="ability-label">@Label</label>
    <div class="score-with-mod">
        <div class="score-wrapper">
            <InputNumber class="form-control ability-score"
            
                         Value="@Score"
                         ValueChanged="ScoreChanged"
                         ValueExpression="@( () => Score )" 
                         max="30"
                         min="0"/>
        </div>
        <div class="modifier-wrapper">
            <span class="modifier-display">@ModifierDisplay</span>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public int Score { get; set; }

    [Parameter]
    public EventCallback<int> ScoreChanged { get; set; }

    [Parameter]
    public int Modifier { get; set; }

    // Return the modifier as a string with a '+' if it is non-negative.
    private string ModifierDisplay => Modifier > 0 ? $"+{Modifier}" : Modifier.ToString();
}
