@page "/character"
@using CharacterCreator.ClassLibrary.Main.CharacterData
@using CharacterCreator.ClassLibrary.Main.CharacterClasses
@using CharacterCreator.ClassLibrary.Main.Origin.CharacterSpecies
@using CharacterCreator.ClassLibrary.Utilities.Services

<h1>Character Sheet</h1>

@if (character == null)
{
    <p>Loading...</p>
}
else
{
    <div class="character-details">
        <p><strong>Name:</strong> @character.Name</p>
        <p><strong>Class:</strong> @character.CharacterClass?.Name</p>
        <p><strong>Species:</strong> @character.Species.Name</p>
        <p><strong>Level:</strong> @character.Level</p>

        <h3>Main Attributes</h3>
        <ul>
            <li><strong>Strength:</strong> @character.Strength.Score</li>
            <li><strong>Dexterity:</strong> @character.Dexterity.Score</li>
            <li><strong>Constitution:</strong> @character.Constitution.Score</li>
            <li><strong>Intelligence:</strong> @character.Intelligence.Score</li>
            <li><strong>Wisdom:</strong> @character.Wisdom.Score</li>
            <li><strong>Charisma:</strong> @character.Charisma.Score</li>
        </ul>
    </div>
}

@code {
    private Character character;

    protected override void OnInitialized()
    {
        // Create a dummy character with hardcoded values
        character = CharacterCreateAndUpdateService.CreateNewCharacter(CharacterClassType.Fighter, CharacterSpeciesType.Aasimar);
    }
}